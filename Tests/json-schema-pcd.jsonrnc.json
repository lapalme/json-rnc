{"$schema":"http://json-schema.org/draft-07/schema#",
 "additionalProperties":false,
 "definitions":{"geo":{"additionalProperties":false,
                       "properties":{"latitude":{"maximum":90,
                                                 "minimum":-90,
                                                 "type":"number"},
                                     "longitude":{"maximum":180,
                                                  "minimum":-180,
                                                  "type":"number"}},
                       "required":["latitude","longitude"],
                       "type":"object"}},
 "properties":{"dimensions":{"additionalProperties":false,
                             "properties":{"height":{"type":"number"},
                                           "length":{"type":"number"},
                                           "width":{"type":"number"}},
                             "required":["length","width","height"],
                             "type":"object"},
               "price":{"exclusiveMinimum":0,
                        "type":"number"},
               "productId":{"type":"integer"},
               "productName":{"type":"string"},
               "tags":{"items":{"type":"string"},
                       "minItems":1,
                       "type":"array"},
               "warehouseLocation":{"$ref":"#/definitions/geo"}},
 "required":["productId","productName","price"],
 "type":"object"}

{
   "definitions": {
      "person": {
         "required": [
            "name",
            "id",
            "address"
         ],
         "type": "object",
         "properties": {
            "postalCode": {
               "$ref": "#/definitions/cpRE"
            },
            "address": {
               "exclusiveMinimum": true,
               "minimum": 10,
               "type": "number",
               "maximum": 100
            },
            "name": {
               "type": "string"
            },
            "id": {
               "oneOf": [
                  {
                     "type": "string"
                  },
                  {
                     "required": [
                        "no"
                     ],
                     "type": "object",
                     "properties": {
                        "no": {
                           "type": "number"
                        }
                     }
                  }
               ]
            }
         }
      },
      "cpRE": {
         "pattern": "[A-Z][0-9][A-Z] [0-9][A-Z][0-9]",
         "type": "string"
      }
   },
   "$schema": "http://json-schema.org/draft-04/schema#",
   "type": "array",
   "items": {
      "$ref": "#/definitions/person"
   }
}
{"$schema":"http://json-schema.org/draft-07/schema#",
 "definitions":{"address":{"type":"object",
                           "required":["locality","region"],
                           "additionalProperties":false,
                           "properties":{"locality":{"type":"string"},
                                         "region":{"type":"string"},
                                         "post-office-box":{"type":"string"},
                                         "extended-address":{"type":"string"},
                                         "street-address":{"type":"string"},
                                         "postal-code":{"type":"string"},
                                         "country-name":{"type":"string"}}},
                "geo":{"type":"object",
                       "required":["latitude","longitude"],
                       "additionalProperties":false,
                       "properties":{"latitude":{"type":"number",
                                                 "minimum":-90,
                                                 "maximum":90},
                                     "longitude":{"type":"number",
                                                  "minimum":-180,
                                                  "maximum":180}}}},
 "type":"object",
 "required":["familyName","givenName"],
 "additionalProperties":false,
 "properties":{"familyName":{"type":"string"},
               "givenName":{"type":"string"},
               "fn":{"type":"string"},
               "additionalName":{"type":"array",
                                 "items":{"type":"string"}},
               "honoricPrefix":{"type":"array",
                                "items":{"type":"string"}},
               "nickname":{"type":"string"},
               "url":{"type":"string"},
               "email":{"type":"object",
                        "required":[],
                        "additionalProperties":false,
                        "properties":{"type":{"type":"string"},
                                      "value":{"type":"string"}}},
               "tel":{"type":"object",
                      "required":[],
                      "additionalProperties":false,
                      "properties":{"type":{"type":"string"},
                                    "value":{"type":"string"}}},
               "adr":{"$ref":"#/definitions/address"},
               "geo":{"$ref":"#/definitions/geo"},
               "tz":{"type":"string"},
               "photo":{"type":"string"},
               "logo":{"type":"string"},
               "sound":{"type":"string"},
               "bday":{"type":"string"},
               "title":{"type":"string"},
               "role":{"type":"string"},
               "org":{"type":"object",
                      "required":[],
                      "additionalProperties":false,
                      "properties":{"organizationName":{"type":"string"},
                                    "organizationUnit":{"type":"string"}}}}}
